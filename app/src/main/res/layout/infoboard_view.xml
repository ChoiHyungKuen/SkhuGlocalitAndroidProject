<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:minHeight="700dp"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/infoboard_view_backBtn"
            android:layout_width="0dp"
            android:textColor="@color/BLUEGREEN"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="←"
            android:textStyle="bold"
            android:textSize="25dp"
            android:clickable="true"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"/>

        <TextView
            android:id="@+id/infoboard_view_editBtn"
            android:text="글 수정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="1"
            android:textColor="@color/WHITE"
            android:background="@drawable/round_btn"
            android:clickable="true"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/infoboard_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="3dp"
            android:layout_weight="2"
            android:text="Title"
            android:textSize="9pt"
            android:textStyle="bold"
            android:textColor="#151359"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        android:weightSum="15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="13"/>

        <TextView
            android:id="@+id/infoboard_view_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="5pt"
            android:textStyle="italic"
            android:textColor="#3c3c3d"/>

        <TextView
            android:id="@+id/infoboard_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="date"
            android:textSize="5pt"
            android:textStyle="italic"
            android:textColor="#3c3c3d"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/round_text"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:layout_weight="12"
        android:weightSum="5"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/infoboard_view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="9dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:weightSum="5"
            android:text="글 내용"
            android:hint="\n\n\n\n\n\n\n\n\n"
            android:textSize="7pt"
            android:textColor="#757273"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:id="@+id/infoboard_view_image"
            android:clickable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

</LinearLayout>