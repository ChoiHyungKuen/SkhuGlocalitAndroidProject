<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:weightSum="10"
            android:orientation="vertical">
            <TextView
                android:id="@+id/infoboard_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="1dp"
                android:text="Title"
                android:textSize="8pt"
                android:textStyle="bold"
                android:textColor="#151359"
                android:maxLines="2"
                android:ellipsize="end"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="15"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal"/>

                <TextView
                    android:id="@+id/infoboard_list_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:text="date"
                    android:textSize="5pt"
                    android:textStyle="italic"
                    android:textColor="#3c3c3d"/>

                <TextView
                    android:id="@+id/infoboard_list_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:text="userName"
                    android:textSize="5pt"
                    android:textStyle="italic"
                    android:textColor="#3c3c3d"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/infoboard_list_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_text"
        android:paddingLeft="10dp"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/infoboard_list_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:text="content"
            android:textSize="7pt"
            android:textColor="#757273"
            android:maxLines="2"
            android:ellipsize="end"/>

    </LinearLayout>

</LinearLayout>
