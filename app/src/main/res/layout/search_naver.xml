<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#46aea7"
        android:layout_weight="1"
        android:weightSum="6">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/search_white"/>
        <TextView
            android:paddingLeft="5dp"
            android:paddingTop="12dp"
            android:id="@+id/naverText"
            android:background="#ffffff"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:textColor="#151359"
            android:layout_margin="10dp"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:weightSum="5"
        android:orientation="vertical"
        android:background="#d3d3d3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/localTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#151359"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="이름"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/localDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="설명"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:weightSum="4"
            android:orientation="horizontal"
            android:background="#ffffff">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:weightSum="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#151359"
                    android:gravity="end"
                    android:text="전화번호｜"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="#151359"
                    android:gravity="end"
                    android:text="주       소｜"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingLeft="1dp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:id="@+id/localTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="전화번호"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <TextView
                        android:id="@+id/localAddress"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="주소"/>
                    <TextView
                        android:id="@+id/localRoadAddress"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:visibility="gone"
                        android:text="도로명주소"/>

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/changeAddress"
                        android:background="#ffffff"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:textColor="#151359"
                        android:gravity="center"
                        android:text="도로명주소\n보기"
                        android:textSize="12dp"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#d3d3d3"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:background="#ffffff"
            android:layout_weight="11">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="블로그·카페 리뷰"/>
        </LinearLayout>

        <ListView
            android:background="#ffffff"
            android:id="@+id/naverList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="89"/>

    </LinearLayout>


</LinearLayout>